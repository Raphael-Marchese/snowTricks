{% extends 'layout.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <header class="bg-white position-relative d-flex align-items-center justify-content-center"
            style="background-image: url('{{ asset('assets/websiteUtils/homepage_picture.jpg') }}'); background-size: cover; background-position: center; background-repeat: no-repeat; height: 90vh;">
        <div class="container text-center position-relative" style="z-index: 1;">
            <div class="overlay-text position-relative d-inline-block px-4 py-3">
                <h1 class="display-5 fw-bold text-dark mb-2">Snowtrick</h1>
                <p class="lead text-grey mb-4">Contribue toi aussi à notre bibliothèque participative!</p>
            </div>
        </div>
        <div class="d-flex justify-content-end me-3">
            <a href="#figures-section" class="position-absolute bottom-0 mb-3 align-items-end  ">
                <i class="bi bi-arrow-down-circle-fill text-dark" style="font-size: 2rem;"></i>
            </a>
        </div>
    </header>

    <section id="figures-section" class="py-5">
        {{ component('TrickGrid', { page: 1 }) }}
    </section>

{% endblock %}
